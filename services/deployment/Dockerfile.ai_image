FROM python:3.12-slim

WORKDIR /app

# 시스템 패키지 설치
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Python 의존성 설치  
COPY pyproject.toml .
RUN pip install uv
RUN uv pip install -e .

# 애플리케이션 파일 복사
COPY shared/ ./shared/
COPY service_ai_content_image/ ./service_ai_content_image/

# 포트 노출
EXPOSE 8001

# 애플리케이션 실행
CMD ["python", "service_ai_content_image/main.py"]